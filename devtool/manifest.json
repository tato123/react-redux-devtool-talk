{
    "name": "Form Sniffer",
    "description": "Displays form elements and ",
    "manifest_version": 2,
    "version": "1.0.0",
    "devtools_page": "devtools.html",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "main.html",
        "panel.html",
        "src/**/*.html",
        "build/*"
    ],
    "background": {
        "scripts": [
            "chrome/background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "<all_urls>",
        "webNavigation",
        "tabs",
        "storage",
        "unlimitedStorage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "chrome/contentScript.js"
            ],
            "run_at": "document_start"
        }
    ]
}